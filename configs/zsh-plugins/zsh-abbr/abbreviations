#---------------------------------------------------------------------
# rc / rcxx

abbr rcg="rc --flags='-g'"
abbr rcxxg="rcxx --flags='-g --std=c++20'"

abbr rcxx20="rcxx --flags='--std=c++20'"
abbr rcxx17="rcxx --flags='--std=c++17'"
abbr rcxx14="rcxx --flags='--std=c++14'"
abbr rcxx11="rcxx --flags='--std=c++11'"
abbr rcxx03="rcxx --flags='--std=c++03'"
abbr rcxx98="rcxx --flags='--std=c++98'"

#---------------------------------------------------------------------
# exa

# default show modified time as `ls`; do not show hidden/ignored files
abbr e='exa --long --group-directories-first --time-style=iso --git --classify --modified'
# show [A]ll files (hidden/ignored files)
abbr ea='exa --long --group-directories-first --time-style=iso --git --classify --modified --all'
# sort by [M]odified
abbr em='exa --long --group-directories-first --time-style=iso --git --classify --header --modified --sort=modified'
# sort by [C]reated
abbr ec='exa --long --group-directories-first --time-style=iso --git --classify --header --created --sort=created'
# tree level
abbr et='exa --group-directories-first --time-style=iso --git --tree'
abbr e1='exa --group-directories-first --time-style=iso --git -1'
abbr e2='exa --group-directories-first --time-style=iso --git --tree --level=2'
abbr e3='exa --group-directories-first --time-style=iso --git --tree --level=3'
abbr e4='exa --group-directories-first --time-style=iso --git --tree --level=4'

#---------------------------------------------------------------------
# rsync

abbr rs="rsync -avzhP"
abbr rsu="rsync -avzhP --update"
abbr rsd="rsync -avzhP --delete"
abbr rspull="rsync_ssh pull"
abbr rspullu="rsync_ssh pull-update"
abbr rspulld="rsync_ssh pull-delete"
abbr rspush="rsync_ssh push"
abbr rspushu="rsync_ssh push-update"
abbr rspushd="rsync_ssh push-delete"

