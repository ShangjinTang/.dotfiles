# FUNCTIONS

#=====================================================================
# functions for local use

_DIRCREATE() {
    for arg in "$@"; do
        if [ ! -d "$arg" ]; then
            mkdir -p "$arg"
        fi
    done
}

_PATHPREPEND() {
    for arg in "$@"; do
        if [ -d "$arg" ] && [[ ":$PATH:" != *":$arg:"* ]]; then
            PATH="$arg${PATH:+":$PATH"}"
        fi
    done
}

_PATHAPPEND() {
    for arg in "$@"; do
        if [ -d "$arg" ] && [[ ":$PATH:" != *":$arg:"* ]]; then
            PATH="${PATH:+"$PATH:"}$arg"
        fi
    done
}

