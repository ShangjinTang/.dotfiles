# nvim -> v
if command -v nvim &> /dev/null; then
    alias v='nvim'
    alias vv='nvim ~/.config/nvim/{*.lua,*.vim,lua/*.lua}'
    alias vk='nvim ~/.config/nvim/lua/{plug-which-key.lua,LunarVim/lua/lvim/core/which-key.lua}'
    alias vz="nvim ~/.zshrc{.pre,,.local,.post}"
