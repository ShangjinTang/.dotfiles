alias a=asynctask
alias af='~/.local/share/nvim/site/pack/lazy/opt/asynctasks.vim/bin/asynctask -f'
function va() {
    if [[ -f .tasks ]]; then
        nvim -O2 .tasks ~/.config/nvim/tasks.ini
