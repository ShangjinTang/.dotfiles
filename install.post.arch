#!/usr/bin/env bash

echo "running install.post.arch ..."

echo "checking ArchLinux 'pac' requirements ..."
if command -v python3 &> /dev/null; then
    PAC_DEPENDENCIES=('hydra-core' 'typer')
    for PACKAGE in "${PAC_DEPENDENCIES[@]}"; do
        if [[ ! $(python3 -m pip show "${PACKAGE}") ]] &> /dev/null; then
            echo " - installing ${PACKAGE} ..."
            python3 -m pip install --user "${PACKAGE}" > /dev/null
        fi
    done
fi
