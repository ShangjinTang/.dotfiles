{
  "title": "Sol Customization: [M]andatory | [O]ptional",
  "rules": [
    {
      "description": "[M] CapsLock -> Hyper/Esc(alone) & Shift+CapsLock -> CapsLock; Win-OS excluded",
      "manipulators": [
        {
          "type": "basic",
          "description": "Use CapsLock as Hyper or Escape(if pressed alone) ",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.microsoft\\.rdc\\.macos$",
                "^com\\.parallels\\.winapp",
                "^com\\.parallels\\.desktop\\.console"
              ]
            }
          ]
        },
        {
          "description": "Use Shift+CapsLock to trigger CapsLock on/off",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": ["shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ]
        },
        {
          "description": "Avoid starting sysdiagnose with the built-in macOS shortcut cmd+shift+option+ctrl+,",
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": []
        },
        {
          "description": "Avoid starting sysdiagnose with the built-in macOS shortcut cmd+shift+option+ctrl+.",
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": []
        },
        {
          "from": {
            "description": "Avoid starting sysdiagnose with the built-in macOS shortcut cmd+shift+option+ctrl+/",
            "type": "basic",
            "key_code": "slash",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": []
        }
      ]
    },



    {
      "description": "[M] Option(Alt) + 12347890-= -> (non-standard) F-Keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "display_brightness_decrement"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "2",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "display_brightness_increment"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "mission_control"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "4",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "launchpad"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "7",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "rewind"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "8",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "9",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "fastforward"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "0",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "mute"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "volume_decrement"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "equal_sign",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "volume_increment"
            }
          ]
        }
      ]
    },



    {
      "description": "[O] Hyper + Tab -> Power",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "power"
            }
          ]
        }
      ]
    }
  ]
}