{
  "title": "Sol Customization: [M]andatory | [O]ptional",
  "rules": [
    {
      "description": "[M] CapsLock -> Hyper/Esc & Shift+CapsLock -> CapsLock",
      "manipulators": [
        {
          "type": "basic",
          "description": "Use CapsLock as Hyper or Escape(if pressed alone) ",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        },
        {
          "description": "Use Shift+CapsLock to trigger CapsLock on/off",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": ["shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ]
        },
        {
          "description": "Avoid starting sysdiagnose with the built-in macOS shortcut cmd+shift+option+ctrl+,",
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["command", "control", "option", "shift"]
            }
          },
          "to": []
        },
        {
          "description": "Avoid starting sysdiagnose with the built-in macOS shortcut cmd+shift+option+ctrl+.",
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": ["command", "control", "option", "shift"]
            }
          },
          "to": []
        },
        {
          "from": {
            "description": "Avoid starting sysdiagnose with the built-in macOS shortcut cmd+shift+option+ctrl+/",
            "type": "basic",
            "key_code": "slash",
            "modifiers": {
              "mandatory": ["command", "control", "option", "shift"]
            }
          },
          "to": []
        }
      ]
    },



